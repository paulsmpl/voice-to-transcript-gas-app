pipeline {
  agent any

  parameters {
    file(name: 'upload', description: 'Audio file upload (via iOS Shortcut)')
  }

  options {
    timeout(time: 20, unit: 'MINUTES')
    timestamps()
    buildDiscarder(logRotator(numToKeepStr: '10'))
  }

  environment {
    // Si tu as besoin d’un token OpenAI par exemple
    // OPENAI_API_KEY = credentials('openai_api_key')
  }

  stages {
    stage('Debug upload') {
      steps {
        sh """
          echo "Upload param: \$upload"
          echo "Contenu du workspace :"
          ls -lh
        """
      }
    }

    stage('Prepare') {
      steps {
        sh """
          mkdir -p input
          cp "\$upload" input/input.m4a
        """
      }
    }

    stage('Install deps + venv') {
      steps {
        sh '''
          set -eux
          python3 -m venv venv
          . venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt
        '''
      }
    }

    stage('Run Python processing') {
      steps {
        sh '''
          set -eux
          . venv/bin/activate
          python process_audio.py input/input.m4a
        '''
      }
    }
  }

  post {
    success {
      echo '✅ Processing completed successfully.'
    }
    failure {
      echo '❌ Something went wrong.'
    }
    always {
      sh 'rm -rf input venv || true'
    }
  }
}
